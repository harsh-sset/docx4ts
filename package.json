{
  "name": "@harsh-sset/docx4ts",
  "description": "typescript docx parser",
  "version": "0.0.1",
  "author": {
    "name": "Raymond Li",
    "email": "lalalic@139.com"
  },
  "keywords": [
    "docx",
    "pptx",
    "zip docx",
    "parser",
    "javascript",
    "typescript"
  ],
  "license": "MIT",
  "readme": "README.md",
  "repository": {
    "type": "git",
    "url": "https://github.com/lalalic/docx4js.git"
  },
  "devDependencies": {
    "@types/cheerio": "^0.22.35",
    "@types/color": "^4.2.0",
    "@types/htmlparser2": "^3.10.7",
    "@types/jest": "^29.0.0",
    "@types/jszip": "^3.4.0",
    "@types/node": "^20.0.0",
    "babel-cli": "^6.6.5",
    "babel-plugin-add-module-exports": "^0.1.2",
    "babel-plugin-transform-class-properties": "^6.6.0",
    "babel-plugin-transform-object-rest-spread": "^6.6.5",
    "babel-preset-es2015": "^6.6.0",
    "browserify": "^13.0.0",
    "jest": "^29.0.0",
    "ts-jest": "^29.0.0",
    "ts-node": "^10.9.0",
    "typescript": "^5.0.0",
    "uglifyify": "^3.0.1",
    "watchify": ">=3.0.0 <4.0.0"
  },
  "dependencies": {
    "cfb": "^0.12.1",
    "cheerio": "^0.22.0",
    "color": "^3.1.0",
    "htmlparser2": "^3.9.2",
    "jszip": "^2.6.0"
  },
  "babel": {
    "presets": [
      "es2015"
    ],
    "plugins": [
      "babel-plugin-add-module-exports",
      "babel-plugin-transform-object-rest-spread",
      "babel-plugin-transform-class-properties"
    ],
    "sourceMaps": "inline"
  },
  "main": "./lib/",
  "module": "./src/",
  "types": "./lib/index.d.ts",
  "scripts": {
    "compile": "tsc",
    "build": "npm run compile && browserify -r ./lib/index.js:docx4js -o dist/docx4js.js",
    "build:min": "npm run compile && browserify -g uglifyify -r ./lib/index.js:docx4js -o dist/docx4js.min.js",
    "dev": "watchify -v -d -r ./lib/index.js:docx4js -o docs/index.js",
    "test": "jest",
    "type-check": "tsc --noEmit"
  }
}
